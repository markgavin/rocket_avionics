#tag WindowCode
	#tag Event
		Sub Opening()
		  Module_Navigation.SetupMenuButton(Self)

		  // Load app icon from asset catalog
		  LoadAppIcon

		  // Apply system label colors for dark mode
		  Module_Navigation.SetLabelSystemColor(LabelAppName.Handle, False)
		  Module_Navigation.SetLabelSystemColor(LabelVersion.Handle, True)
		  Module_Navigation.SetLabelSystemColor(LabelCopyright.Handle, True)
		  Module_Navigation.SetLabelSystemColor(LabelDescription.Handle, True)

		  // Defer multiline setup â€” Xojo may reset numberOfLines after Opening
		  Timer.CallLater(0, AddressOf ApplyMultilineDescription)
		End Sub
	#tag EndEvent


	#tag Method, Flags = &h21
		Private Sub ApplyMultilineDescription()
		  // Set numberOfLines to 0 (unlimited) so description text wraps
		  Declare Sub setNumberOfLines Lib "UIKit" Selector "setNumberOfLines:" (obj As Ptr, lines As Integer)
		  setNumberOfLines(LabelDescription.Handle, 0)
		End Sub
	#tag EndMethod

	#tag Method, Flags = &h21
		Private Sub LoadAppIcon()
		  // Load app icon from iOS asset catalog and display with rounded corners
		  Declare Function NSClassFromString Lib "Foundation" (name As CFStringRef) As Ptr
		  Declare Function imageNamed Lib "UIKit" Selector "imageNamed:" (cls As Ptr, name As CFStringRef) As Ptr
		  Declare Sub setImage Lib "UIKit" Selector "setImage:" (obj As Ptr, image As Ptr)
		  Declare Function layer Lib "QuartzCore" Selector "layer" (obj As Ptr) As Ptr
		  Declare Sub setCornerRadius Lib "QuartzCore" Selector "setCornerRadius:" (obj As Ptr, radius As Double)
		  Declare Sub setMasksToBounds Lib "QuartzCore" Selector "setMasksToBounds:" (obj As Ptr, masks As Boolean)

		  Var theUIImageClass As Ptr = NSClassFromString("UIImage")
		  Var theImage As Ptr = imageNamed(theUIImageClass, "AppIcon60x60")
		  If theImage <> Nil Then
		    setImage(AppIconImage.Handle, theImage)

		    // Apply iOS-style rounded corners (22% of icon size)
		    Var theLayer As Ptr = layer(AppIconImage.Handle)
		    setCornerRadius(theLayer, 44)
		    setMasksToBounds(theLayer, True)
		  End If
		End Sub
	#tag EndMethod


#tag EndWindowCode
